@model IEnumerable<WeatherApp.Models.Weather>

@{
    ViewBag.Title = "Index";
}

<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery-1.10.2.js"></script>
<h2 class="text-center">My Weather App</h2>

<p>
    @using (Html.BeginForm())
    {
    <p class="text-center">
        Enter a 5 digit Zip-Code: <input type="number" id="zip" />
        <input type="submit" id="click_btn" value="Search" class="btn btn-default" />
    </p>
    <div id="update_div"></div>
    }
</p>


<script>
    $(document).ready(function () {
        $("#click_btn").click(function () {
            zipNumber = $("#zip").val();
            $.ajax({
                type: "get",
                url: "/Weathers/Search?" + "zip=" + zipNumber,
                datatype: "html",
                success: function (data) {
                    $("#update_div").html(data);
                }
            });

            return false;
        });

    });

</script>

